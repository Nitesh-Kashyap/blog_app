<h1>Sign Up</h1>
<%= form_with model: @user, url: register_path do |f| %>
<p>
  <%= f.label 'email' %><br>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label 'password' %><br>
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label 'password_confirmation' %><br>
  <%= f.password_field :password_confirmation %>
</p>
<p>
  <%= f.submit 'Sign Up' %>
</p>
<% end %>

<span>or Already have an account,</span>
<%= link_to 'Sign In here', login_path %>